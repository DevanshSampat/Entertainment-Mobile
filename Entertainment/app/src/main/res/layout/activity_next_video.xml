<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".NextVideoActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_alignEnd="@id/play_now"
        android:layout_alignStart="@id/play_now"
        android:layout_height="match_parent"
        android:layout_below="@id/up_next"
        android:layout_above="@id/play_now"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_marginVertical="25dp"
        android:id="@+id/image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:ellipsize="end"
        android:textSize="35sp"
        android:id="@+id/text"
        android:layout_alignEnd="@id/cancel"
        android:layout_alignStart="@id/cancel"
        android:textColor="@android:color/white"
        android:text="WebSeries : S1E2"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:text="Up Next in "
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/up_next"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#43A047"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="20dp"
        android:onClick="openVideo"
        android:id="@+id/play_now"
        android:layout_marginEnd="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="Play Now"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/cancel"
        android:onClick="cancel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Cancel"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>